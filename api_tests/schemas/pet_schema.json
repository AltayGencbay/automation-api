{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pet",
  "type": "object",
  "required": ["id", "name", "photoUrls", "status"],
  "properties": {
    "id": {
      "type": ["integer", "number"],
      "minimum": 0
    },
    "category": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": {
          "type": ["integer", "number"],
          "minimum": 0
        },
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "name": {
      "type": "string"
    },
    "photoUrls": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {
            "type": ["integer", "number"],
            "minimum": 0
          },
          "name": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "status": {
      "type": "string",
      "enum": ["available", "pending", "sold"]
    }
  },
  "additionalProperties": true
}
